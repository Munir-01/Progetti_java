package esercizi_web;

import java.io.IOException;
import java.util.Scanner;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet({ "/Esercizio_01", "/esercizio1" })
public class Esercizio_01 extends HttpServlet {
	private static final long serialVersionUID = 1L;

    public Esercizio_01() {
        super();

    }

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        response.getWriter().append("Ciao, inserisci nell'URL un numero e io far√≤ un rettangolo con la base equivalente al numero specificato" + "\n");
		String numero = request.getParameter("numero");
		int n = Integer.parseInt(numero);		
		
		for (int i = 0; i < n; i++) {
			for (int x = 0; x < i; x++) {

				response.getWriter().print("#");
			}
			response.getWriter().println("#");
		}
	}	
	}

